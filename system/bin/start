#!/bin/busybox sh

clear
echo "Base System:  $(grep "^PRETTY_NAME=" /etc/os-release | cut -d= -f2 | tr -d '"')"
echo "Architecture: $(uname -m)"
echo "Session IP:   $SESSION_IP"
echo
echo -e "\033[33mWelcome to Apptron!\033[0m"
echo


if [ -f /project/.apptron/envrc ]; then
    source /project/.apptron/envrc
fi

if [ -z "$SHELL" ]; then
    export SHELL=/bin/sh
fi

setsid /bin/sh -c "exec $SHELL </dev/ttyS0 >/dev/ttyS0 2>&1"