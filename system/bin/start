#!/bin/busybox sh

if [ -f /project/.apptron/motd ]; then
    source /project/.apptron/motd
elif [ -f /project/motd ]; then
    source /project/motd
elif [ -f /etc/motd ]; then
    source /etc/motd
fi

if [ -f /project/.apptron/envrc ]; then
    source /project/.apptron/envrc
elif [ -f /project/envrc ]; then
    source /project/envrc
fi

if [ -z "$SHELL" ]; then
    export SHELL=/bin/sh
fi

exec setsid /bin/sh -c "exec $SHELL </dev/ttyS0 >/dev/ttyS0 2>&1"