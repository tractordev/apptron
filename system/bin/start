#!/bin/busybox sh

if [ -f /project/.apptron/banner ]; then
    source /project/.apptron/banner
elif [ -f /project/.banner ]; then
    source /project/.banner
elif [ -f /etc/banner ]; then
    source /etc/banner
fi

if [ -f /project/.apptron/envrc ]; then
    source /project/.apptron/envrc
elif [ -f /project/.envrc ]; then
    source /project/.envrc
fi

if [ -z "$SHELL" ]; then
    export SHELL=/bin/sh
fi

exec setsid /bin/sh -c "exec $SHELL </dev/ttyS0 >/dev/ttyS0 2>&1"