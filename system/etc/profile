export PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
export PAGER=less
umask 022

export SESSION_IP=$(ifconfig eth0 | grep "inet addr" | cut -d: -f2 | cut -d' ' -f1)

for script in /etc/profile.d/*.sh ; do
	if [ -r "$script" ] ; then
		. "$script"
	fi
done
unset script

# use nicer PS1 for bash and busybox ash
if [ -n "$BASH_VERSION" -o "$BB_ASH_VERSION" ]; then
	if [ -n "$USER" ]; then
		export PS1="$USER:\w $ "
	else
		export PS1="(anonymous):\w $ "
	fi
fi

if [ -f "/home/$USER/.profile" ]; then
	. "/home/$USER/.profile"
fi

# default to cd to the home directory
if [ -n "$USER" ]; then
	cd ~
fi

# cd to the project directory if it exists
if [ -d /project ]; then
	cd /project
fi

